<!DOCTYPE html>
<html lang="en">

<head>
    <title>Rally Media</title>
    {{> default_head }}
</head>

<body>
{{> header }}


<!-- Page Content -->
<div class="container .width100">

    <!-- Marketing Icons Section -->
    <div class="row">
        {{#each articles.recents}}
            <div class="col-md-4 recent-articles">
                <h2 class="text-center">
                    {{sectionName}}
                </h2>
                <div class="img-box">
                    <img alt="can't show the image"
                         style="width: 700px; height: 450px;"
                         class="img-responsive img-hover"
                         src="{{picture}}"/>
                </div>
                <div class="sub">
                    {{# if slug}}
                        <a href="/article/{{slug}}">
                            <span><h3>{{title}}</h3></span>
                        </a>
                    {{ else }}
                        <span><h3>{{title}}</h3></span>
                    {{/if}}
                    <span><h5>by {{author}}</h5></span>
                </div>
            </div>
        {{/each}}
    </div>
    <!-- /.row -->

    <!-- Portfolio Section -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Articles</h2>
        </div>
        {{#each articles.all}}
            <div class="row">
                <div class="col-sm-2">
                    {{#if picture}}
                        <img src="{{ picture }}" width="110px" height="80px" alt="">
                    {{ else }}
                        <div></div>
                    {{/if}}
                </div>
                <div class="col-sm-10">
                    <h3>
                        <a href="/article/{{ slug }}">
                            {{ title }}
                        </a>
                        <small>by {{ author }}</small>
                    </h3>
                    <strong>{{sectionName}}</strong>
                    <small>{{ createdAt }}</small>

                </div>
            </div>
        {{/each}}
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Script to Activate the Carousel -->
<script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
</script>

</body>

</html>
