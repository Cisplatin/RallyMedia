<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ article.title }}</title>
    {{> default_head }}
</head>
<body>
	{{> header}}
<div class="container-fluid">
    <div class="col-sm-10 col-sm-push-1 article-body">

        <h1>{{ article.title }}
        <br>
        <small>by {{ article.author }}</small></h1>
        <center><img src="{{ article.picture }}" alt="{{ article.picture }}"></center>
        <p>
            {{{ article.text }}}
        </p>
    </div>
</div>

{{> footer }}
</body>
</html>
