<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Rally Media - {{ section }}</title>
    {{> default_head }}
</head>
<body>
{{> header }}
<div class="container">
    <div class="col-sm-10 col-sm-push-1">
        <h2>{{ section }}</h2>
        {{#each articles }}
            <div class="row">
                <div class="col-sm-2">
                    {{#if picture}}
                        <img src="{{ picture }}" width="110px" height="80px" alt="">
                    {{ else }}
                        <div></div>
                    {{/if}}
                </div>
                <div class="col-sm-10">
                    <h3>
                        <a href="/article/{{ slug }}">
                            {{ title }}
                        </a>
                        <small>by {{ author }}</small>
                    </h3>
                    <h5>{{ createdAt }}</h5>
                    <p>{{{trimString text }}}</p>
                </div>
            </div>
        {{else}}
            <p>No {{ section }} articles were found.</p>
        {{/each}}
    </div>
</div>
</body>
</html>
